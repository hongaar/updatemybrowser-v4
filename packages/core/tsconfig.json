{
  "include": ["src"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],

    "declaration": true,

    "strict": true,
    "removeComments": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "outDir": "lib",
    "rootDir": "src"
  }
}
